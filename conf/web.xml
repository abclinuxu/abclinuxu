<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>
	<display-name>AbcLinuxu.cz website</display-name>

    <servlet>
        <servlet-name>AbcInit</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.init.AbcInit</servlet-class>
        <init-param>
          <param-name>CONFIG</param-name>
          <param-value>WEB-INF/log4j.xml</param-value>
        </init-param>
        <init-param>
          <param-name>VELOCITY</param-name>
          <param-value>WEB-INF/velocity.properties</param-value>
        </init-param>
        <init-param>
          <param-name>URL</param-name>
          <param-value>jdbc:mysql://localhost/abc?user=literakl&amp;password=lkaretil&amp;useUnicode=true&amp;characterEncoding=ISO-8859-2</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ViewCategory</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.view.ViewCategory</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ViewRelation</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.view.ViewRelation</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>EditCategory</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.edit.EditCategory</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SelectIcon</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.view.SelectIcon</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SelectRelation</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.view.SelectRelation</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>EditRelation</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.edit.EditRelation</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.edit.EditUser</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ViewIndex</servlet-name>
        <servlet-class>cz.abclinuxu.servlets.view.ViewIndex</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>ViewCategory</servlet-name><url-pattern>/hardware/ViewCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCategory</servlet-name><url-pattern>/software/ViewCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCategory</servlet-name><url-pattern>/clanky/ViewCategory</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewRelation</servlet-name><url-pattern>/hardware/ViewRelation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRelation</servlet-name><url-pattern>/software/ViewRelation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewRelation</servlet-name><url-pattern>/clanky/ViewRelation</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditCategory</servlet-name><url-pattern>/hardware/EditCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCategory</servlet-name><url-pattern>/software/EditCategory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCategory</servlet-name><url-pattern>/clanky/EditCategory</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SelectIcon</servlet-name><url-pattern>/SelectIcon</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SelectRelation</servlet-name><url-pattern>/SelectRelation</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditRelation</servlet-name><url-pattern>/EditRelation</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditUser</servlet-name><url-pattern>/EditUser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewIndex</servlet-name><url-pattern>/index.html</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
