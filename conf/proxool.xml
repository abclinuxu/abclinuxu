<?xml version="1.0" encoding="ISO-8859-1"?>
<proxool>
  <alias>abc</alias>
  <driver-url>jdbc:mysql://localhost/@DB_SCHEMA@?useUnicode=true</driver-url>
  <driver-class>com.mysql.jdbc.Driver</driver-class>
  <driver-properties>
    <property name="user" value="@DB_USER@"/>
    <property name="password" value="@DB_PASSWORD@"/>
  </driver-properties>

  <minimum-connection-count>1</minimum-connection-count>
  <maximum-connection-count>30</maximum-connection-count>
  <maximum-active-time>30000</maximum-active-time>
<!--  <maximum-active-time>30000000</maximum-active-time> -->
  <maximum-connection-lifetime>1800000</maximum-connection-lifetime>
  <house-keeping-sleep-time>20000</house-keeping-sleep-time>
  <house-keeping-test-sql>select CURRENT_DATE</house-keeping-test-sql>

  <verbose>false</verbose>
  <trace>false</trace>
  <statistics>1m,1h,1d</statistics>
  <statistics-log-level>INFO</statistics-log-level>
</proxool>
