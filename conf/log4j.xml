<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
           <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d %C{2} - %m%n"/>
           </layout>
	</appender>

	<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
           <param name="File" value="/home/literakl/abc/deploy/WEB-INF/logs/abc.log" />
           <param name="Append" value="true" />
	   <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d %-5p %C{1} - %m%n"/>
           </layout>
	</appender>

	<appender name="PROXOOL" class="org.apache.log4j.FileAppender">
           <param name="File" value="/home/literakl/abc/deploy/WEB-INF/logs/proxool.log" />
           <param name="Append" value="true" />
	   <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d | %m%n"/>
           </layout>
	</appender>

	<appender name="REQUESTS" class="org.apache.log4j.FileAppender">
           <param name="File" value="/home/literakl/abc/deploy/WEB-INF/logs/requests.log" />
           <param name="Append" value="true" />
	   <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d%n%m%n-----%n"/>
           </layout>
	</appender>

	<category name="cz">
	  <priority value="info" />
	</category>

	<category name="cz.abclinuxu.utils.email">
	  <priority value="debug" />
	</category>

	<category name="org.velocity">
	  <priority value="fatal" />
	</category>

	<category name="org.logicalcobwebs.proxool" additivity="false">
	  <priority value="info" />
 	  <appender-ref ref="PROXOOL" />
	</category>

	<category name="RequestLog" additivity="false">
	  <priority value="info" />
 	  <appender-ref ref="REQUESTS" />
	</category>

	<root>
	   <priority value="info" />
   	   <appender-ref ref="FILE" />
<!--      <appender-ref ref="STDOUT" /> -->
	</root>

</log4j:configuration>
