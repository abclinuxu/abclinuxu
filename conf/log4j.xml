<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
           <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d %C{2} - %m%n"/>
           </layout>
	</appender>

	<appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
           <param name="File" value="/home/literakl/tomcat/webapps/ROOT/logs/abc.log" />
           <param name="DatePattern" value="'.'yyyy-MM-dd" />
           <param name="Append" value="true" />
	       <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d %-5p %C{1} - %m%n"/>
           </layout>
	</appender>

	<appender name="REDIRECT" class="org.apache.log4j.FileAppender">
           <param name="File" value="/home/literakl/tomcat/webapps/ROOT/logs/redirect.log" />
           <param name="DatePattern" value="yyyy-MM-dd" />
           <param name="Append" value="true" />
	       <layout class="org.apache.log4j.PatternLayout">
             <param name="ConversionPattern" value="%d | %m%n"/>
           </layout>
	</appender>

	<category name="cz">
	  <priority value="info" />
	</category>

	<category name="cz.abclinuxu.persistance.Cache">
	  <priority value="info" />
	</category>

	<category name="cz.abclinuxu.scheduler">
	  <priority value="info" />
	</category>

	<category name="redirect" additivity="false">
	  <priority value="info" />
 	  <appender-ref ref="REDIRECT" />
	</category>

	<root>
	   <priority value="info" />
   	   <appender-ref ref="FILE" />
<!--      <appender-ref ref="STDOUT" /> -->
	</root>

</log4j:configuration>
